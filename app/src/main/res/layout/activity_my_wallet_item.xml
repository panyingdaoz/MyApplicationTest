<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content"
    tools:context=".wallet.MyWalletActivity">

   <TextView
       android:id="@+id/transaction_type"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:text="充值"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/transaction_type_time"
       app:layout_constraintTop_toBottomOf="@id/transaction_type"
       app:layout_constraintStart_toStartOf="parent"
       android:text="019-9-1  17:00"
       android:layout_marginTop="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

   <TextView
       android:layout_marginTop="10dp"
       android:id="@+id/transaction_sum"
       app:layout_constraintTop_toTopOf="@id/transaction_type"
       app:layout_constraintEnd_toEndOf="parent"
       android:text="+10.00"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>